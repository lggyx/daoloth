<% if (page.layout === 'page') { %>
<article class="page">
  <header class="page-header">
    <h1><%= page.title %></h1>
  </header>
  
  <div class="page-content">
    <%- page.content %>
  </div>
</article>

<style>
.page {
  max-width: 800px;
  margin: 0 auto;
}

.page-header {
  margin-bottom: 30px;
  padding-bottom: 20px;
  border-bottom: 1px solid #eee;
}

.page-header h1 {
  margin-top: 0;
  font-size: 2em;
}

.page-content {
  font-size: 1.1em;
  line-height: 1.8;
}
</style>
<% } %>